<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:textColor="@color/color_chatcenter_text">

    <TextView
        android:id="@+id/schedule_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule_thursday"
        android:textColor="@color/color_chatcenter_text_light_gray"
        android:textSize="12sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <TextView
        android:id="@+id/schedule_date"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="27"
        android:textColor="@color/color_chatcenter_text_dark_gray"/>

</LinearLayout>
