<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/color_chatcenter_widget_border"/>
            <corners android:topRightRadius="@dimen/margin5dp"
                     android:bottomRightRadius="@dimen/margin5dp"/>
            <stroke android:width="@dimen/widget_line_width"
                    android:color="@color/color_chatcenter_widget_border"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@android:color/white"/>
            <corners android:topRightRadius="@dimen/margin5dp"
                     android:bottomRightRadius="@dimen/margin5dp"/>
            <stroke android:width="@dimen/widget_line_width"
                    android:color="@color/color_chatcenter_widget_border"/>
        </shape>
    </item>

</selector>