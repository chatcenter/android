    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ToolbarStyle">
        android:paddingRight="@dimen/margin10dp">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawablePadding="@dimen/margin10dp"
            android:drawableRight="@drawable/icon_right_triangle_small"
            android:drawableTint="@color/color_chatcenter_text"
            android:textColor="@color/color_chatcenter_title_text"
            android:textStyle="normal"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/menu_video_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/margin10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_videochat_widget"
            android:tint="@color/color_chatcenter_widget_border"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/menu_phone_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/margin10dp"
            android:background="@android:color/transparent"
            android:tint="@color/color_chatcenter_widget_border"
            android:src="@drawable/icon_phonecall_widget"
            android:visibility="gone"/>

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_line_width"
        android:layout_below="@id/toolbar"
        android:background="@color/color_chatcenter_separator_light"/>

    <!-- リスト -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- プログレスバー -->
        <ProgressBar
            android:id="@+id/chat_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <!-- リスト -->
        <ListView
            android:id="@+id/chat_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="3dp"
            android:stackFromBottom="true"
            android:transcriptMode="disabled"/>

        <!-- ネットワークエラー -->
        <TextView
            android:id="@+id/chat_network_error_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fb000a"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/chat_network_error_message"
            android:textColor="#fff"/>
    </RelativeLayout>


    <include
        layout="@layout/chat_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/widget_menu_place_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_height"
        android:orientation="vertical"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/suggestion_place_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chatcenter_suggestion_holder_height"
        android:background="@color/color_chatcenter_suggestion_background"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/suggestion"
            android:textColor="@color/color_chatcenter_text"
            android:textStyle="bold"/>

        <HorizontalScrollView
            android:id="@+id/suggestion_scroll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/suggestion_horizontal_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"/>

        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>
