<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/margin10dp"
    android:paddingRight="@dimen/margin10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_suggestion_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/suggestion_icon"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_widget_location"
            android:tint="@color/color_chatcenter_widget_border"/>

        <TextView
            android:id="@+id/suggestion_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/schedule_widget_title"
            android:textColor="@color/color_chatcenter_widget_border"
            android:textSize="12sp"/>

    </LinearLayout>

</LinearLayout>